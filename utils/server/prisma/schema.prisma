// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String   @unique
  username    String
  password    String
  admin       Boolean
  description String?
  note        String?
  orders      Order[]
}

model Machine {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String   @unique
  description String?
  note        String?
  orders      Order[]
}

model Game {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  name        String    @unique
  description String?
  note        String?
  products    Product[]
}

model Customer {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String   @unique
  description String?
  note        String?
  orders      Order[]
}

model Payment {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String   @unique
  description String?
  note        String?
  orders      Order[]
}

model Product {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  description String?
  note        String?
  gameId      Int?
  game        Game?     @relation(fields: [gameId], references: [id])
  orders      Order[]
}

model Order {
  uid         String    @id @default(uuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  amount      Int
  cost        String
  price       Int
  status      String
  description String?
  note        String?
  userId      Int?
  user        User?      @relation(fields: [userId], references: [id])
  paymentId   Int?
  payment     Payment?   @relation(fields: [paymentId], references: [id])
  machineId   Int?
  machine     Machine?   @relation(fields: [machineId], references: [id])
  productId   Int?
  product     Product?   @relation(fields: [productId], references: [id])
  customerId  Int?
  customer    Customer? @relation(fields: [customerId], references: [id])
}
